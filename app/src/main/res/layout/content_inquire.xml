<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/indexm"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gilbert.myproject.InquireActivity"
    tools:showIn="@layout/activity_inquire">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID NUMBER"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id"
        android:inputType="number"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE NUMBER"></TextView>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:hint="use +2547xxxxx.. format"

        />

    <TextView
        android:id="@+id/bt_setdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE "
       />
         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100">

           <EditText
        android:layout_weight="80"
          android:layout_width="fill_parent"
           android:layout_height="wrap_content"
          android:id="@+id/txtDate" />
             <ImageButton
          android:layout_weight="20"
                 android:src="@drawable/date_picker1"
           android:id="@+id/imageButton1"
           android:layout_width="wrap_content"
          android:layout_height="wrap_content"></ImageButton>
            </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MESSAGE"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:singleLine="false"

        android:lines="3"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check"
            android:text="I agree to the Terms of Service and Conditions"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send"
        android:text="SEND  INQUIRY"
        android:textStyle="bold"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
