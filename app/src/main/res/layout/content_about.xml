<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gilbert.myproject.AboutActivity"
    tools:showIn="@layout/activity_about">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/help"
            android:layout_marginTop="40sp"
            android:textSize="20sp"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:text="Cereal4Farmers is an application developed to help farmers make orders of fertilizers and seeds without having to go to cereal board.It increase contact between cereal board members and farmers."/>


         <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/help1" android:layout_marginTop="40sp"
           android:textSize="20sp"
           android:layout_marginRight="15sp"
              android:layout_marginLeft="15sp"
            android:text="This app was developed by developer Wilfred kim"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/help2" android:layout_marginTop="40sp"
        android:textSize="20sp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:text="Incase of anything please contact wilfredkim5@gmail.com"
        />




    </LinearLayout>
    </ScrollView>


</RelativeLayout>
